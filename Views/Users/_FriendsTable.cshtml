@model List<Vkontakte.Models.UsersWithCommon>
@for (int i = 0; i < Model.Count(); i += 3)
{
    <div class="row" id="usersTable" style="margin-left:0.4rem; margin-bottom:0.4rem">
        @for (int j = 0; j < 3; j++)
        {
            @if (Model[i + j] != null)
            {
                <div class="col-4">
                    <div class="row">
                        <div style="font-size:12px" class="col-7">
                            <p style="margin-bottom:0">@Model[i + j].Имя @Model[i + j].Фамилия</p>
                            <p>Общие друзья: @Model[i + j].Количество_общих_друзей</p>
                        </div>
                        <div class="col-3">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-plus-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm7.5-3a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
                            </svg>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
} 